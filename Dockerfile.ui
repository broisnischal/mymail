FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY ui/package.json ui/package-lock.json* ./
RUN npm ci

# Copy source code
COPY ui ./

# Build
RUN npm run build

FROM nginx:alpine

# Copy built files
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx config
COPY ui/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
