{
  "name": "mymail",
  "version": "1.0.0",
  "description": "Self-hosted SMTP mail server",
  "private": true,
  "workspaces": [
    "api",
    "ui"
  ],
  "scripts": {
    "dev": "bun run --bun api/src/index.ts",
    "build": "bun run build:api && bun run build:ui",
    "build:api": "cd api && bun run build",
    "build:ui": "cd ui && npm run build",
    "typecheck": "cd api && bun run typecheck"
  },
  "devDependencies": {
    "@rolldown/pluginutils": "^1.0.0-rc.1",
    "@types/bun": "latest",
    "@vitejs/plugin-react": "^5.1.2",
    "fdir": "^6.5.0",
    "tinyglobby": "^0.2.15",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  },
  "packageManager": "bun@latest",
  "trustedDependencies": [
    "es5-ext"
  ]
}
